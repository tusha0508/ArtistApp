# ArtistApp Backend - Environment Variables Template
# Copy this to .env and fill in your values

# Database
MONGO_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_secret_key_here

# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email (SMTP Configuration)
# For Gmail: use App Password (not your regular password)
# For other providers: check their SMTP documentation
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="ArtistApp <your_email@gmail.com>"

# Server
PORT=5000
NODE_ENV=production

# Render specific (optional)
SERVER_URL=https://your-render-app.onrender.com
